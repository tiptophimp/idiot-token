# IDIOT Token Vesting Verification Environment Variables
# Copy this file to .env and fill in your values

# Private key for contract verification (must match deployer)
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Etherscan V2 API key for contract verification (covers all chains)
# Get from: https://etherscan.io/apis
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_V2_API_KEY_HERE

# Optional: Gas reporting
REPORT_GAS=true

# Network RPC URLs
RPC_URL_PRIMARY=https://mainnet.base.org
RPC_URL_SEPOLIA=https://sepolia.base.org

# Ledger hardware wallet address (optional)
LEDGER_ADDRESS=0xYOUR_LEDGER_ADDRESS_HERE
