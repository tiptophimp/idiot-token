{ 
  "version": 1, 
  "project": "IDIOT Token", 
  "branch": "staging",
  "rules": [
    { 
      "path": "data/tokenomics.json",
      "description": "Sync token, liquidity, holders",
      "sync": {
        "enabled": true,
        "interval": "12h",
        "sources": [
          {
            "name": "BaseScan Token Info",
            "url": "https://api.basescan.org/api?module=token&action=tokeninfo&contractaddress=0xC29EF04CFFe38012dcfc1E96a2B368443f298dE1",
            "fields": {
              "totalSupply": "supply.total",
              "decimals": "supply.decimals",
              "contractAddress": "network.contract",
              "name": "brand",
              "symbol": "symbol"
            }
          },
          {
            "name": "DexScreener Metrics",
            "url": "https://api.dexscreener.com/latest/dex/tokens/0xC29EF04CFFe38012dcfc1E96a2B368443f298dE1",
            "fields": {
              "liquidity.usd": "metrics.liquidityUSD",
              "volume.h24": "metrics.volume24hUSD",
              "pairAddress": "metrics.primaryPair",
              "priceUsd": "metrics.priceUSD"
            }
          },
          {
            "name": "BaseScan Holder Count",
            "url": "https://api.basescan.org/api?module=token&action=tokenholdercount&contractaddress=0xC29EF04CFFe38012dcfc1E96a2B368443f298dE1",
            "fields": {
              "result": "metrics.holderCount"
            }
          }
        ]
      },
      "validate": {
        "schema": true,
        "immutable": [
          "network.contract",
          "symbol",
          "supply.total",
          "governance.safe.address"
        ]
      },
      "commit": {
        "enabled": true,
        "message": "auto: sync tokenomics + liquidity + holder data",
        "branch": "staging",
        "push": true
      }
    }
  ]
}
